            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "X-API-KEY",
                        "value": "mysecretkey"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/orders?page=1&page_size=10",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "orders"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "page_size",
                            "value": "10"
                        }
                    ]
                }
            }
        },
        {
            "name": "Cancel Order",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "X-API-KEY",
                        "value": "mysecretkey"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/orders/1/cancel",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "orders",
                        "1",
                        "cancel"
                    ]
                }
            }
        }
    ]
}